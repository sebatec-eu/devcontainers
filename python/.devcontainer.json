{
  "build": {
    "dockerfile": "./Dockerfile",
    "context": ".",
    "args": {
      "IMAGE_REVISION": "${localEnv:IMAGE_REVISION}"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "os-provided",
      "toolsToInstall": "flake8,autopep8,black,yapf,mypy,pydocstyle,pycodestyle,bandit,pipenv,virtualenv,pytest,pylint,pip-tools,ruff,uv"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.terminal.activateEnvInCurrentTerminal": true,
        "python.terminal.activateEnvironment": true,
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/venv/bin/python"
      },
      "extensions": [
        "mechatroner.rainbow-csv",
        "ms-python.debugpy",
        "ms-python.isort",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-vscode.makefile-tools",
        "redhat.vscode-yaml"
      ]
    }
  },
  "runArgs": ["--userns=keep-id"],
  "containerUser": "vscode"
  // "remoteUser": "vscode"
  // "onCreateCommand": "pipx install pip-tools ruff"
  // "postCreateCommand": "make setup"
}
