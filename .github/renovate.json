{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "docker-dependency",
      "pinDigests": true
    },
    {
      "matchManagers": [
        "devcontainer"
      ],
      "groupName": "devcontainer-dependency",
      "pinDigests": false
    }
  ],
  "devcontainer": {
    "managerFilePatterns": [
      "/.devcontainer/devcontainer.json$/",
      "/.devcontainer.json$/"
    ]
  }
}
